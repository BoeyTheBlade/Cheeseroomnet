<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-Lj/rMtf2sYX47XA9A+2t+P3iU+2qWzJWM7oISa1twA+2fVDEg4mNss/eE4sfLNTwNwjv8DR07PKdFjGBfA7MUw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  </head>
  <body class="indexbody">
    <%- include('./partials/header.ejs', { pageTitle: 'The Cheese Room Podcast' }) -%>

    <script src="https://www.youtube.com/iframe_api"></script>
    <div id="youtube-background"></div>
    <script>
      // Function to create the YouTube player
      function onYouTubeIframeAPIReady() {
        var player = new YT.Player('youtube-background', {
          videoId: 'xgeqxrd9np0', // YouTube video ID
          playerVars: {
            autoplay: 1, // Autoplay the video
            controls: 0, // Hide player controls
            modestbranding: 1, // Hide YouTube logo
            playsinline: 1, // Play inline on mobile devices
            enablejsapi: 1, // Enable the JavaScript API
            origin: window.location.origin // Required for some features
          },
          events: {
            onReady: function(event) {
              event.target.mute(); // Mute the video when it's ready
            },
            onStateChange: function(event) {
              if (event.data === YT.PlayerState.ENDED) {
                event.target.seekTo(8, true); // Pause the video at 10 seconds
              }
            }
          }
        });
      }
    </script>
    
    

    <%- include('./partials/footer.ejs') -%>
  </body>
</html>
